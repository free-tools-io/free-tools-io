<form id='tool-input-form'>
</form>
<script type="text/javascript">
    $('#tool-input-form').jsonForm({
      schema: {
        address: {
            type: 'string',
            title: 'Crypto Address (BTC, LTC, ...)',
            description: 'BTC, LTC, DOGE, ETH, CounterParty, Ripple, Omni, NXT, NXT AE, NEM, Factron, PeerCoin, Dash, Black, Ruby, Grant, Capri, etc...',
            required: true,
            maxLength: 10000,
            default: "<%= query.address ? query.address : '' %>"
        }
    },
    form: [
        '*',
        {
            type: "submit",
            title: "OK Go"
        }   
    ],
    onSubmit: function (errors, values) {
        var url = window.location.href;
        if(url.indexOf("?") > 0) {
          url = url.substring(0, url.indexOf("?"));
        } 
        url += "?" + jQuery.param(values);
        window.location.replace(url);
      }
    });
</script>
  
<form id='tool-input-form'>
</form>
<script type="text/javascript">
    $('#tool-input-form').jsonForm({
      schema: {
        width: {
            type: 'number',
            title: 'Width (Pixels)',
            required: true,
            maxLength: 10000,
            default: "<%= query.width ? query.width : '' %>"
        },
        height: {
            type: 'number',
            title: 'Height (Pixels)',
            required: true,
            maxLength: 10000,
            default: "<%= query.height ? query.height : '' %>"
        }
    },
    form: [
        '*',
        {
            type: "submit",
            title: "OK Go"
        }   
    ],
    onSubmit: function (errors, values) {
        var url = window.location.href;
        if(url.indexOf("?") > 0) {
          url = url.substring(0, url.indexOf("?"));
        } 
        url += "?" + jQuery.param(values);
        window.location.replace(url);
      }
    });
</script>
  